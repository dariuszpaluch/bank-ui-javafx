<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<BorderPane prefWidth="231.0" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.dariuszpaluch.java.controllers.MainLayoutController">
    <top>
      <FlowPane fx:id="loginPane">
        <Text text="LOGIN" />
        <TextField fx:id="login" promptText="Login" />
        <PasswordField fx:id="password" promptText="Password"/>
        <Button VBox.vgrow="ALWAYS" minWidth="100" fx:id="loginButton" alignment="CENTER" defaultButton="true"
                mnemonicParsing="false" text="Login" StackPane.alignment="CENTER_RIGHT"/>
        <Text fx:id="errorText" style="-fx-text-fill: red"/>

      </FlowPane>
    </top>
    <center>
      <FlowPane fx:id="authorizedPane" visible="false" orientation="VERTICAL">
        <Text text="BANK" />
        <FlowPane>
          <Text text="Selected account"/>
          <ChoiceBox fx:id="selectedAccount" minWidth="200"/>
        </FlowPane>
        <FlowPane orientation="VERTICAL">
          <FlowPane>
            <Button fx:id="getBalanceButton" text="GET BALANCE"/>
            <Text fx:id="balanceValue"/>
          </FlowPane>
          <FlowPane>
            <Button fx:id="depositMoneyButton" text="Deposit"/>
            <TextField fx:id="depositAmountTextField" promptText="Deposit amount"/>
          </FlowPane>
          <FlowPane>
            <Button fx:id="withdrawMoneyButton" text="Withdraw"/>
            <Text fx:id="withdrawAmountTextField"/>
          </FlowPane>
        </FlowPane>
      </FlowPane>
    </center>

  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </padding>
</BorderPane>